{
    "ts-node": {
        "transpileOnly": true,
        "respawn": true,
        "ignoreWatch": "node_modules",
        "noNotify": true
    },
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@adapters/*": ["src/adapters/*"],
            "@core/*": ["src/core/*"],
            "@external/*": ["src/external/*"],
            "@legacy/*": ["src/legacy/*"],
            "@shared/*": ["src/shared/*"],
            "@main/*": ["src/main/*"]
        },
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"]
}
